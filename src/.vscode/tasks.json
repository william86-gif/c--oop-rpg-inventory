{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build rpg_inventory (cmd.exe)",
      "type": "shell",
      "command": "g++",
      "args": ["-std=c++17", "src\\*.cpp", "-o", "rpg_inventory.exe"],
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
